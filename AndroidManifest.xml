<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/theavengers"
        android:label="@string/app_name"
        android:roundIcon="@drawable/theavengers"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheAvengers"
        tools:targetApi="31">

    <!-- MainActivity declaration with intent filter -->
    <activity
        android:name=".MainActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- DetailActivity declaration -->
    <activity
        android:name=".DetailActivity"
        android:exported="true" />

    <!-- AboutActivity declaration -->
    <activity
        android:name=".AboutActivity"
        android:exported="true" />

</application>

    </manifest>
